{
  "name": "chartsyBE",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "_moduleAliases": {
    "@": "dist/src"
  },
  "scripts": {
    "prestart": "pnpm build",
    "start": "NODE_ENV=production LOCAL=true node dist/src/index.js",
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/index.ts",
    "dist:clean": "rm -rf dist",
    "build": "pnpm dist:clean && tsc -p tsconfig.build.json",
    "db:create:local": "psql -c 'DROP DATABASE IF EXISTS chartsydb;' && psql -c 'CREATE DATABASE chartsydb;' && psql -f db/seed/createDB.sql && ts-node db/seed/seedDB.ts",
    "db:seed:neon": "psql -f db/seed/createDB.sql && NODE_ENV=neon ts-node db/seed/seedDB.ts",
    "db:seed": "ts-node db/seed/seedDB.ts",
    "db:delete": "psql -f db/seed/deleteDB.sql",
    "test": "jest",
    "empty-bucket": "aws s3 rm s3://serverless-framework-deployments-eu-west-2-4503d36b-608c --recursive",
    "lambda:deploy": "dotenv -e .env.production -- serverless deploy",
    "lambda:deploy:code-only": "dotenv -e .env.production -- serverless deploy function --function api",
    "CI/CD_processes:start": "bash ~/src/scripts/CICD_processes.sh chartsyBE"
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@vendia/serverless-express": "^4.12.6",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "module-alias": "^2.2.3",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "@types/supertest": "^6.0.3",
    "chartsy-types": "^1.0.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.26.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
